{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2021",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "outDir": "./MegaKnights_BP/scripts",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["@minecraft/server", "@minecraft/server-ui"]
  },
  "exclude": ["node_modules", "src/**/__tests__/**"],
  "include": ["src/**/*.ts"]
}
